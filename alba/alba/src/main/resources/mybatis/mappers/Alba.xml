<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.dao.AlbaDAO">

	<sql id="fromFrag">
		from alba
			inner join grade on (alba.gr_code = grade.gr_code)
	</sql>
	<sql id="searchFrag">
	
	</sql>

	<select id="selectAlbaList" parameterType="PagingVO" resultType="AlbaVO">
		SELECT *
		<include refid="fromFrag"/>
		<include refid="searchFrag"/>
	</select>
	
	<select id="selectTotalRecord" parameterType="pagingVO" resultType="int">
		SELECT COUNT(*)
		<include refid="fromFrag"/>
		<include refid="searchFrag"/>
	</select>
	
	<select id="selectAlba" parameterType="string" resultType="AlbaVO">
		SELECT *
		<include refid="fromFrag"/>
		WHERE AL_ID = #{al_id}
	</select>
</mapper>